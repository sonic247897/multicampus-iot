	public void serverStart(int port) {
		try {
			server = new ServerSocket(port);
			taclientlist.append("�궗�슜�옄 �젒�냽 ��湲곗쨷\n");
			if(server != null) {
				// �겢�씪�씠�뼵�듃�쓽 �젒�냽�쓣 湲곕떎由щ뒗 泥섎━
				connection();
			}
		} catch (IOException e) {
			e.printStackTrace();
		}
		
	}

	public void connection() {
		Thread thread = new Thread(new Runnable() {
			@Override
			public void run() {
				while(true) {
					try {
						// �떎瑜� �젒�냽�옄媛� �젒�냽�븯硫� accept�릺硫댁꽌 �냼耳볦씠 怨꾩냽 援먯껜�맂�떎.
						socket = server.accept();
						String ip = socket.getInetAddress().getHostAddress();
						taclientlist.append(ip+"========�궗�슜�옄 �젒�냽!!!\n");
						
						// 5. �깉濡쒖슫 �겢�씪�씠�뼵�듃媛� �젒�냽�븯硫� 湲곗〈 �궗�슜�옄�쓽 �젙蹂대�� �꽆湲� �닔 �엳�룄濡� �닔�젙====================
						// @ call by reference: userlist媛앹껜瑜� User�뿉 �꽆寃⑥ㄼ湲� �븣臾몄뿉 User�뿉�꽌 �뀑�똿�빐�꽌 蹂�寃쏀븯硫�
						// 洹� 蹂�寃� �궡�슜�씠 怨듭쑀�맂�떎!
						User user = new User(socket, ChatServerView.this, userlist);
						
						// =========================================================================
						user.start();
					} catch (IOException e) {
						e.printStackTrace();
					}
				}// end while
			}
		});
		thread.start();
	}

	
	
}






